package dao;

import java.sql.SQLException;

import util.JdbcConnection;

public class testMemberDao extends JdbcConnection{
	public int insert(String id, String pwd) {
		int res = 0;
		try {
			String sql = "insert into testMember values(?,?)";
			psmt = con.prepareStatement(sql);
			psmt.setString(1, id);
			psmt.setString(2,pwd);
			res = psmt.executeUpdate();
			
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return res;
	}
	
	public int update(String id, String pwd) {
		int res = 0;
		try {
			String sql = "update testMember set pwd = ? where id = ? ";
			psmt = con.prepareStatement(sql);
			psmt.setString(1, pwd);
			psmt.setString(2, id);
			res = psmt.executeUpdate();
			
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return res;
	}
	
	public int delete(String id) {
		int res = 0;
		try {
			String sql = "delete from testMember where id = ? ";
			psmt = con.prepareStatement(sql);
			psmt.setString(1, id);
			res = psmt.executeUpdate();
			
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return res;
	}
	
	public int select(String id) {
		try {
			String sql = "select * from testMember where id = ? ";
			psmt = con.prepareStatement(sql);
			psmt.setString(1, id);
			rs = psmt.executeQuery();
			if(rs.next()) {
				String mid = rs.getString(1);
				String mpwd = rs.getString(2);
				System.out.println(mid + " / " + mpwd);
			}
			
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	
}
